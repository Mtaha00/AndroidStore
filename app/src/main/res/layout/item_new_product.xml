<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/colorBackground"
    android:layoutDirection="rtl"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey"
            android:layout_alignParentBottom="true"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey"
            android:layout_alignParentStart="true"
            />

    <ImageView
        android:id="@+id/img_newProduct_item"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/name_newProduct_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/img_newProduct_item"
        android:maxLines="2"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"

        />



    <TextView
        android:id="@+id/txt_price_new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_newProduct_item"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text=" 50,000,000 تومان"
        android:layout_marginHorizontal="8dp"
        />

    </RelativeLayout>
</androidx.cardview.widget.CardView>