<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:layoutDirection="rtl"
    android:paddingHorizontal="8dp">


    <TextView
        android:id="@+id/title_specification_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="8dp"
        android:textColor="@color/textColor_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="صفحات: 122" />

    <TextView
        android:id="@+id/txt_specification_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/title_specification_item"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="صفحات: 122"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/textColor_grey"
        android:layout_alignRight="@id/txt_specification_item"
        />

</RelativeLayout>